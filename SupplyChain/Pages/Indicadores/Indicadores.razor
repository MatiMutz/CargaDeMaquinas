@page "/pivot"
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Inputs
@inject NavigationManager NavigationManager
@using Syncfusion.Blazor.Grids
@using Syncfusion.Blazor.PivotView
@using Syncfusion.Blazor.Data
@inject CustomHttpClient Http

<div class="col-lg-9 control-section sb-property-border">
    <div class="content-wrapper">
        <SfPivotView TValue="Indicadores" ShowFieldList=true>
            <PivotViewDataSourceSettings TValue="Indicadores" ExpandAll=false EnableSorting=true>
                <SfDataManager Url="api/Indicador" Adaptor="Syncfusion.Blazor.Adaptors.WebApiAdaptor"></SfDataManager>
                <PivotViewColumns>
                    <PivotViewColumn Name="Pedido"></PivotViewColumn>
                </PivotViewColumns>
                <PivotViewRows>
                    <PivotViewRow Name="RazonSoc"></PivotViewRow>
                </PivotViewRows>
                <PivotViewValues>
                    <PivotViewValue Name="Cantped"></PivotViewValue>
                </PivotViewValues>
            </PivotViewDataSourceSettings>
            @*<PivotViewDisplayOption View=View.Chart></PivotViewDisplayOption>*@
        </SfPivotView>
    </div>
</div>
<style>
    .e-pivotview {
        min-height: 200px;
    }

    html, body {
        height: 100%;
    }
</style>
