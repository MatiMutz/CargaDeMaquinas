@page "/"
@page "/login"



@inherits SupplyChain.Pages.Logins.LoginPageBase



<div class="card">
    <h4 class="card-header">Login</h4>
    <div class="card-body">
        <EditForm Model="@usuario" OnValidSubmit="OnValidSubmit">
            <div class="form-group">
                <label>Username</label>
                <InputText @bind-Value="@usuario.Usuario" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText @bind-Value="@usuario.Contras" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary" @onclick="LoginDialogOk">
                Login
            </button>
        </EditForm>
    </div>
</div>



